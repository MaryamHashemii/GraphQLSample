<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_user_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_mode_not_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
           >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gud_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/parent_edt_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center"
                android:layoutDirection="ltr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gud_1">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:textAlignment="center"
                android:hint="@string/label_username"
                android:textAppearance="@style/TextAppearance.Zarin.Subtitle1"
                 />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/parent_edt_pass"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center"
                android:layoutDirection="ltr"
                app:layout_constraintTop_toBottomOf="@id/parent_edt_username"
                app:layout_constraintStart_toStartOf="@id/parent_edt_username"
                app:layout_constraintEnd_toEndOf="@id/parent_edt_username">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:hint="@string/label_password"
                    android:inputType="numberPassword"
                    android:textAppearance="@style/TextAppearance.Zarin.Subtitle1"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_btn"
                android:text="@string/label_enter"
                android:textAppearance="@style/TextAppearance.Zarin.Button"
                app:layout_constraintTop_toBottomOf="@id/parent_edt_pass" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_mode_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="gone">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="شما در حال حاظر لاگین هستید"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_btn"
                android:text="خروج"
                android:textAppearance="@style/TextAppearance.Zarin.Headline1"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/txt_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


         